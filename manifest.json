{
    "name": "Krilleer",
    "version": "0.2",
    "author": "Byambajav Namsraijav / Намсрайжавын Бямбажав",
    "manifest_version": 2,
    "description": "Крилл галигаар шууд бичицгээе | krill | cyrillic",
    "background": {
	"scripts": ["background.js"]
    },
    "options_page": "pages/options.html",
    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "js": [
                "lib/jquery-1.11.1.min.js",
                "frontend.js"
            ],
            "run_at": "document_end",
	    "all_frames": true
	}
    ],
    "commands": {
        "toggleMode" : {
            "suggested_key": {
                "default": "Ctrl+Q",
                "mac": "Command+Q"
            },
            "description": "Enables or disables the mode"
        }
    },
    "icons": {
        "38": "icons/enabled.png",
        "128": "icons/header.png"
    },
    "browser_action": {
	"default_icon": "icons/disabled.png"
    }
}
