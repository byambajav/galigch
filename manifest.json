{
    "name": "Krilleer",
    "version": "1.0",
    "author": "Byambajav Namsraijav / Намсрайжавын Бямбажав",
    "manifest_version": 2,
    "description": "Крилл галигаар шууд бичицгээе | krill | cyrillic",
    "background": {
	"scripts": ["background.js"]
    },
    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "js": [
                "lib/jquery-1.11.1.min.js",
                "frontend.js"
            ],
	    "run_at": "document_start",
	    "all_frames": true
	}
    ],
    "commands": {
        "toggleMode" : {
            "suggested_key": {
                "default": "Ctrl+M",
                "mac": "Command+M"
            },
            "description": "Enables or disables the mode"
        }
    },
    "browser_action": {
	"default_icon": "icons/disabled.png"
    }
}
